{
  "name": "developer-tools-pwa",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "A modern Progressive Web Application providing essential developer utilities",
  "keywords": ["pwa", "developer-tools", "json-formatter", "text-compare", "sql-formatter"],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "biome check .",
    "lint:fix": "biome check . --apply",
    "format": "biome format . --write",
    "type-check": "tsc --noEmit",
    "verify": "pnpm lint && pnpm type-check && pnpm build",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "19",
    "react-dom": "19",
    "zustand": "^5.0.0",
    "react-router-dom": "^6.26.2",
    "tailwindcss": "4",
    "@tailwindcss/cli": "next",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.2",
    "workbox-window": "^7.1.0",
    "workbox-precaching": "^7.1.0",
    "workbox-routing": "^7.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "vite-plugin-pwa": "^0.20.5",
    "vite": "6",
    "typescript": "5.6",
    "@biomejs/biome": "^1.9.3",
    "husky": "^9.1.6",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.0.0"
}
